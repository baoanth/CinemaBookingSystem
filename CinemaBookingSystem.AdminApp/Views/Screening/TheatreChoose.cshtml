@model IPagedList<CinemaBookingSystem.ViewModels.TheatreViewModel>;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@{
    ViewData["Title"] = "TheatreChoose";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int num = 0;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Screening/</span> Choose Theatre</h4>
    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Rạp @Model.First().Cinema.CinemaName</h5><br />
                    <h5 class="mb-0">Hãy chọn phòng chiếu bạn muốn xem lịch chiếu</h5>
                </div>
                <form method="post">
                    <div class="row">
                        <div class="col-sm-8" style="padding-left:30px !important">
                            <input type="text" name="key" placeholder="Tìm kiếm..." class="form-control" />
                        </div>
                        <button type="submit" class="col-sm-1 btn btn-primary"><i class="fa fa-search"></i></button>
                    </div>
                </form>
                <br />
                <a asp-action="LandingPage"> <input type="submit" class="btn btn-primary" value="Trở về danh sách rạp" /></a>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên phòng chiếu</th>
                                <th>Số chỗ ngồi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                num++;
                                <tr>
                                    <td>
                                        <span>@num</span>
                                    </td>
                                    <td>
                                        <a asp-action="Index" asp-controller="Screening" asp-route-id="@item.TheatreId"> @item.TheatreName</a>
                                    </td>
                                    <td>
                                        @item.Capacity
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                <nav aria-label="Page navigation">
                    @Html.PagedListPager(Model, page => Url.Action("TheatreChoose", new { page }), new PagedListRenderOptions(){
                    DisplayLinkToIndividualPages = true,
                    DisplayPageCountAndCurrentLocation = false,
                    MaximumPageNumbersToDisplay = 10,
                    LiElementClasses = new string[] { "page-item" },
                    PageClasses = new string[] { "page-link" },
                    })
                </nav>
            </div>
        </div>
    </div>
</div>


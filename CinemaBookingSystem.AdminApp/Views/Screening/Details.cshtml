@model CinemaBookingSystem.ViewModels.ScreeningViewModel;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    int? currentId = Context.Session.GetInt32("currentTheatreId");
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Screening/</span> Details</h4>
    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Chi tiết lịch chiếu</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Tên phim</label>
                            <div class="col-sm-10">
                                <a asp-action="Details" asp-controller="Movie" asp-route-id="@Model.MovieId">@Model.Movie.MovieName</a>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Giờ chiếu</label>
                            <div class="col-sm-10">
                                @Model.ShowTime.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Ngày chiếu</label>
                            <div class="col-sm-10">
                                @Model.ShowTime.ToString("HH:mm")
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Tại phòng chiếu</label>
                            <div class="col-sm-10">
                                @Model.Theatre.TheatreName
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Rạp phim</label>
                            <div class="col-sm-10">
                                @Model.Theatre.Cinema.CinemaName
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Trạng thái</label>
                            <div class="col-sm-10">
                                @{
                                    if (Model.ShowTime < DateTime.Now)
                                    {
                                        <span class="badge bg-label-success me-1">Đã chiếu</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-label-primary me-1">Sắp chiếu</span>
                                    }
                                }
                            </div>
                        </div>
                    </form>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <a asp-action="Edit" asp-route-id="@Model.ScreeningId"> <input type="submit" class="btn btn-warning" value="Chỉnh sửa" /></a> &ensp;
                            <a asp-action="Index" asp-route-id="@currentId"> <input type="submit" class="btn btn-primary" value="Trở về danh sách" /></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
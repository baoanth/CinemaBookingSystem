@model CinemaBookingSystem.ViewModels.ScreeningViewModel;
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Mọi thao tác không thể hoàn tác, bạn có chắc chắn muốn xóa lịch chiếu ra khỏi danh sách?</h5>
                </div>
                <h6 class="mb-0">Những chỗ ngồi thuộc lịch chiếu cũng sẽ bị xóa</h6>
                <div class="card-body">
                    <form method="post" asp-action="Delete" asp-controller="Screening" asp-route-id="@Model.ScreeningId">
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" >Tên phim</label>
                            <div class="col-sm-10">
                                @Model.Movie.MovieName
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" >Giờ chiếu</label>
                            <div class="col-sm-10">
                                @Model.ShowTime.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Ngày chiếu</label>
                            <div class="col-sm-10">
                                @Model.ShowTime.ToString("HH:mm")
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" >Tại phòng chiếu</label>
                            <div class="col-sm-10">
                                @Model.Theatre.TheatreName
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" >Rạp phim</label>
                            <div class="col-sm-10">
                                @Model.Theatre.Cinema.CinemaName
                            </div>
                        </div>
                        <div class="row justify-content-end">
                            <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                        </div>
                    </form>
                    <hr />
                    <a asp-action="Details" asp-controller="Screening" asp-route-id="@Model.ScreeningId"> <input type="submit" class="btn btn-primary" value="Trở về" /></a>
                </div>
            </div>
        </div>
    </div>
</div>


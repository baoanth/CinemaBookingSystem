@model IEnumerable<CinemaBookingSystem.ViewModels.ScreeningViewModel>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    int num = 0;
    int totalScreening = Model.Count();
    int? currentId = Context.Session.GetInt32("currentTheatreId");
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Screening/</span> List</h4>
    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h4 class="mb-0">DANH SÁCH SUẤT CHIẾU</h4>
                    <h5 class="card-header">Suất chiếu hiện có : @totalScreening</h5>
                </div>
                <div class="card-body">
                    <div style="display:flex;">
                        <a asp-action="Index" asp-controller="TheatreChoose" asp-route-id="@currentId" style="padding-left:20px !important"> <input type="submit" class="btn btn-primary" value="Trở về danh sách phòng chiếu" /></a>
                        <a asp-action="Create" style="padding-left:20px !important"> <input type="submit" class="btn btn-primary" value="Thêm mới" /></a>
                    </div>
                    <br />
                    <div class="table-responsive text-nowrap">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Tên phim</th>
                                    <th>Ngày chiếu</th>
                                    <th>Giờ chiếu</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Reverse())
                                {
                                    num++;
                                    <tr>
                                        <td>
                                            <span>@num</span>
                                        </td>
                                        <td>
                                            @item.Movie.MovieName
                                        </td>
                                        <td>
                                            @item.ShowTime.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>
                                            @item.ShowTime.ToString("HH:mm")
                                        </td>
                                        <td>
                                            @{
                                                if (item.ShowTime < DateTime.Now)
                                                {
                                                    <span class="badge bg-label-success me-1">Đã chiếu</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-label-primary me-1">Sắp chiếu</span>
                                                }
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="ScreeningPositionsDetails" asp-route-id="@item.ScreeningId"> <input type="submit" value="Xem thông tin chỗ ngồi" class="btn btn-primary" /></a>
                                            &nbsp&nbsp
                                            <a asp-action="Details" asp-route-id="@item.ScreeningId"> <input type="submit" value="Xem chi tiết" class="btn btn-primary" /></a>
                                            &nbsp&nbsp
                                            <a asp-action="Edit" asp-route-id="@item.ScreeningId"> <input type="submit" value="Chỉnh sửa" class="btn btn-warning" /></a>
                                            &nbsp&nbsp
                                            <a asp-action="Delete" asp-route-id="@item.ScreeningId"> <input type="submit" value="Xóa" class="btn btn-danger" /></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-border-bottom-0">
                                <tr>
                                    <th>STT</th>
                                    <th>Tên phim</th>
                                    <th>Ngày chiếu</th>
                                    <th>Giờ chiếu</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@model IEnumerable<CinemaBookingSystem.ViewModels.UserViewModel>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int num = 0;
    int totalUser = Model.Count();
}

<div class="card">
    <br />
    <h4 class="card-header text-center">DANH SÁCH NHÂN VIÊN HỆ THỐNG</h4>
    <hr />
    <h5 class="card-header">Tổng số nhân viên : @totalUser</h5>
    <a asp-action="Create" style="padding-left:30px !important"> <input type="submit" class="btn btn-primary" value="Thêm mới" /></a>
    <hr />
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên tài khoản</th>
                    <th>Họ tên nhân viên</th>
                    <th>Chức vụ</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    num++;
                    <tr>
                        <td>
                            <span>@num</span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.UserId"> @Html.DisplayFor(modelItem => item.Username)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role.RoleName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.UserId"> <input type="submit" value="Chỉnh sửa" class="btn btn-warning" /></a>
                            &nbsp&nbsp
                            <a asp-action="Delete" asp-route-id="@item.UserId"> <input type="submit" value="Xóa" class="btn btn-danger" /></a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot class="table-border-bottom-0">
                <tr>
                    <th>STT</th>
                    <th>Tên tài khoản</th>
                    <th>Họ tên nhân viên</th>
                    <th>Chức vụ</th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>


@model CinemaBookingSystem.ViewModels.CinemaViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    int? currentId = Context.Session.GetInt32("currentCinemaId");
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Cinema/</span> Details</h4>
    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">@Html.DisplayFor(model => model.CinemaName)</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="cinema-name">Tên rạp<span class="text-danger"> *</span></label>
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.CinemaName)
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="hotline">Hotline<span class="text-danger"> *</span></label>
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.Hotline)
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="fax">FAX<span class="text-danger"> *</span></label>
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.FAX)
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="address">Địa chỉ<span class="text-danger"> *</span></label>
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.Address)
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="city-select">Thành phố<span class="text-danger"> *</span></label>
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.City)
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="region-select">Miền<span class="text-danger"> *</span></label>
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.Region)
                            </div>
                        </div>
                    </form>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <a asp-action="Edit" asp-route-id="@Model.CinemaId"> <input type="submit" class="btn btn-warning" value="Chỉnh sửa" /></a> &ensp;
                            <a asp-action="Index" asp-route-id="@currentId"> <input type="submit" class="btn btn-primary" value="Trở về danh sách" /></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

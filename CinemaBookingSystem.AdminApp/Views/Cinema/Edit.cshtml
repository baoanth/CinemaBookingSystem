@model CinemaBookingSystem.ViewModels.CinemaViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    int? currentId = Context.Session.GetInt32("currentCinemaId");
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Cinema/</span> Edit</h4>
    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Chỉnh sửa rạp phim</h5>
                    <small class="text-muted float-end text-danger">* là thông tin bắt buộc</small>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Edit" asp-controller="Cinema">
                        <div class="row mb-3" hidden="hidden">
                            <label class="col-sm-2 col-form-label" for="cinema-id">CinemaId<span class="text-danger"> *</span></label>
                            <div class="col-sm-10">
                                <input type="text" asp-for=CinemaId class="form-control" id="cinema-id" readonly="readonly" />
                                <span asp-validation-for="CinemaId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="cinema-name">Tên rạp<span class="text-danger"> *</span></label>
                            <div class="col-sm-10">
                                <input type="text" asp-for=CinemaName class="form-control" id="cinema-name" placeholder="CGV Trà Vinh..." />
                                <span asp-validation-for="CinemaName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="hotline">Hotline<span class="text-danger"> *</span></label>
                            <div class="col-sm-10">
                                <input type="text" asp-for=Hotline class="form-control" id="hotline" placeholder="0975760808..." />
                                <span asp-validation-for="Hotline" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="fax">FAX<span class="text-danger"> *</span></label>
                            <div class="col-sm-10">
                                <input type="text" asp-for=FAX class="form-control" id="fax" placeholder="840000..." />
                                <span asp-validation-for="FAX" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="address">Địa chỉ<span class="text-danger"> *</span></label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="Address" class="form-control" id="address" placeholder="53 Lý Tự Trọng K4 P4..." />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="city-select">Thành phố<span class="text-danger"> *</span></label>
                            <div class="col-sm-10">
                                <select id="city-select" class="form-select" asp-for="City">
                                    <option value="An Giang">An Giang</option>
                                    <option value="Bà Rịa - Vũng Tàu">Bà Rịa - Vũng Tàu</option>

@model IPagedList<CinemaBookingSystem.ViewModels.CinemaViewModel>;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    int num = 0;
    int totalCinema = Model.TotalItemCount;
}
<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h4 class="mb-0">DANH SÁCH RẠP PHIM</h4>
                    <hr />
                    <h5 class="card-header">Rạp phim hiện có : @totalCinema</h5>
                </div>
                <form method="post">
                    <div class="row">
                        <div class="col-sm-3" style="padding-left:30px !important">
                            <input type="text" name="key" placeholder="Tìm kiếm theo tên rạp..." class="form-control" />
                        </div>
                        <div class="col-sm-3">
                            <select name="city" class="form-select">
                                <option value="">Chọn thành phố</option>
                                <option value="An Giang">An Giang</option>
                                <option value="Bà Rịa - Vũng Tàu">Bà Rịa - Vũng Tàu</option>
                                <option value="Bắc Giang">Bắc Giang</option>

@model IEnumerable<CinemaBookingSystem.ViewModels.CinemaViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    int num = 0;
    int totalCinema = Model.Count();
}

<div class="card">
    <br />
    <h4 class="card-header text-center">DANH SÁCH RẠP PHIM</h4>
    <hr />
    <h5 class="card-header">Rạp phim hiện có : @totalCinema</h5>
    <a asp-action="Create" style="padding-left:30px !important"> <input type="submit" class="btn btn-primary" value="Thêm mới" /></a>
    <hr />
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên rạp</th>
                    <th>Địa chỉ</th>
                    <th>Thành phố</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    num++;
                    <tr>
                        <td>
                            <span>@num</span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.CinemaId"> @Html.DisplayFor(modelItem => item.CinemaName)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CinemaId"> <input type="submit" value="Chỉnh sửa" class="btn btn-warning" /></a>
                            &nbsp&nbsp
                            <a asp-action="Delete" asp-route-id="@item.CinemaId"> <input type="submit" value="Xóa" class="btn btn-danger" /></a>
                            &nbsp&nbsp
                            <a asp-action="Index" asp-controller="Theatre" asp-route-id="@item.CinemaId"> <input type="submit" value="Danh sách phòng chiếu" class="btn btn-primary" /></a>
                        </td>
                    </tr>
                } 
            </tbody>
            <tfoot class="table-border-bottom-0">
                <tr>
                    <th>STT</th>
                    <th>Tên rạp</th>
                    <th>Địa chỉ</th>
                    <th>Thành phố</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@model CinemaBookingSystem.ViewModels.SlideViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Slide/</span> Edit</h4>
    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Thêm mới banner</h5>
                    <small class="text-muted float-end text-danger">* là thông tin bắt buộc</small>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Edit" enctype="multipart/form-data">
                        <div class="row mb-3" hidden="hidden">
                            <label class="col-sm-2 col-form-label" for="slide-id">SlideId<span class="text-danger"> *</span></label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="SlideId" class="form-control" id="slide-id" />
                                <span asp-validation-for="SlideId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="slide-name">Tên ảnh<span class="text-danger"> *</span></label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="Name" class="form-control" id="slide-name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="thump-img">Ảnh</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="Image" class="form-control" hidden="hidden" id="thum-img" />
                                <input type="file" name="postedFile" class="form-control" id="thump-img" accept="image/png, image/jpg, image/jpeg" />
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="description">Chú thích</label>
                            <div class="col-sm-10">
                                <textarea asp-for=Description class="form-control" id="description" cols="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-warning w-100" value="Thêm mới">Chỉnh sửa</button> &ensp;
                            </div>
                        </div>
                    </form>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <a asp-action="Index"> <input type="submit" class="btn btn-primary" value="Trở về danh sách" /></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


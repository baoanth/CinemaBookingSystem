
@{
    ViewData["Title"] = "Verify";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Xác thực đơn đặt vé</h5>
                    <small class="text-muted float-end text-danger">* là thông tin bắt buộc</small>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Verify" asp-controller="Booking">
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="payment-name">Nhập mã xác thực<span class="text-danger"> *</span></label>
                            <div class="col-sm-10">
                                <input type="text" name="verifycode" class="form-control" id="payment-name" />
                            </div>
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary w-100" value="Thêm mới">Tìm kiếm</button> &ensp;
                            </div>
                        </div>
                    </form>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <a asp-action="Index" asp-controller="Booking"> <input type="submit" class="btn btn-primary" value="Trở về danh sách đơn đặt vé" /></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@model CinemaBookingSystem.ViewModels.ArticleViewModel;
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Chi tiết bài viết @Html.DisplayFor(model => model.ArticleTitle)</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Tiêu đề bài viết</label>
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.ArticleTitle)
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Ảnh bài viết</label>
                            <div class="col-sm-10">
                                <img src="@("/media/articles/" + @Model.ArticleImage)" alt="Lỗi ảnh" width="795" height="447" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Video bài viết</label>
                            <div class="col-sm-10">
                                @{
                                    if (Model.ArticleVideo != null)
                                    {
                                        <video width="795" height="447" controls autoplay>
                                            <source src="@("/media/articles/vids/" + @Model.ArticleVideo)" type="video/mp4">
                                            Lỗi video
                                        </video>
                                    }
                                    else
                                    {
                                        <p>Bài viết không có video.</p>
                                    }
                                }
                                
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Nội dung bài viết</label>
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.ArticleContent)
                            </div>
                        </div>
                    </form>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <a asp-action="Edit" asp-controller="Article" asp-route-id="@Model.ArticleId"> <input type="submit" class="btn btn-warning" value="Chỉnh sửa" /></a> &ensp;
                            <a asp-action="Index" asp-controller="Article"> <input type="submit" class="btn btn-primary" value="Trở về danh sách" /></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


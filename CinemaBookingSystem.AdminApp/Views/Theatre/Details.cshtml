@model CinemaBookingSystem.ViewModels.TheatreViewModel;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Theatre/</span> Details</h4>
    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">@Html.DisplayFor(model => model.TheatreName)</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="theatre-name">Tên phòng chiếu<span class="text-danger"> *</span></label>
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.TheatreName)
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="hotline">Số chỗ ngồi<span class="text-danger"> *</span></label>
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.Capacity)
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="cinema-name">Thuộc rạp<span class="text-danger"> *</span></label>
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.Cinema.CinemaName)
                            </div>
                        </div>
                    </form>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <a asp-action="Edit" asp-route-id="@Model.TheatreId"> <input type="submit" class="btn btn-warning" value="Chỉnh sửa" /></a> &ensp;
                            <a asp-action="Index"> <input type="submit" class="btn btn-primary" value="Trở về danh sách" /></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


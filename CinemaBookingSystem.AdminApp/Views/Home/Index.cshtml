@model IEnumerable<CinemaBookingSystem.ViewModels.BookingDetailViewModel>
@{
    ViewData["Title"] = "Home Page";
    string? fullName = Context.Session.GetString("_fullname");
}

@{
    int totalMonth = 0;
    foreach (var item in Model.Where(x => x.Booking.BookedAt.Month == DateTime.Now.Month && x.Booking.IsPaid))
    {
        totalMonth += item.ScreeningPosition.Price;
    }
    int totalYear = 0;
    foreach (var item in Model.Where(x => x.Booking.BookedAt.Year == DateTime.Now.Year && x.Booking.IsPaid))
    {
        totalYear += item.ScreeningPosition.Price;
    }
    int monthNum = 0;
    int yearNum = 0;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-lg-12 mb-4 order-0">
            <div class="card">
                <div class="d-flex align-items-end row">
                    <div class="col-sm-7">
                        <div class="card-body">
                            <h5 class="card-title text-primary">Xin chào, @fullName! 🎉</h5>
                        </div>
                    </div>
                    <div class="col-sm-5 text-center text-sm-left">
                        <div class="card-body pb-0 px-0 px-md-4">
                            <img src="../assets/img/illustrations/man-with-laptop-light.png"
                                 height="140"
                                 alt="View Badge User"
                                 data-app-dark-img="illustrations/man-with-laptop-dark.png"
                                 data-app-light-img="illustrations/man-with-laptop-light.png" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <!-- Order Statistics -->
        <div class="col-md-4 col-lg-4 col-xl-4 order-0 mb-4">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between pb-0">
                    <div class="card-title mb-0">
                        <h5 class="m-0 me-2">Tổng số phim</h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex flex-column align-items-center gap-1">
                            <br>
                            <span>Phim đang chiếu</span>
                            <h3 class="mb-2">@ViewBag.NowShowingMovies</h3>
                        </div>
                        <div class="d-flex flex-column align-items-center gap-1">
                            <br>
                            <span>Phim sắp chiếu</span>
                            <h3 class="mb-2">@ViewBag.ComingSoonMovies</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ Order Statistics -->
        <div class="col-md-4 col-lg-4 col-xl-4 order-0 mb-4">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between pb-0">
                    <div class="card-title mb-0">
                        <h5 class="m-0 me-2">Số người dùng</h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex flex-column align-items-center gap-1">
                            <br>
                            <span>Quản trị viên</span>
                            <h3 class="mb-2">@ViewBag.Administrators</h3>
                        </div>
                        <div class="d-flex flex-column align-items-center gap-1">
                            <br>
                            <span>Khách hàng</span>
                            <h3 class="mb-2">@ViewBag.Users</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-lg-3 col-xl-3 order-0 mb-4">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between pb-0">
                    <div class="card-title mb-0">
                        <h5 class="m-0 me-2">Số rạp hệ thống</h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex flex-column align-items-center gap-1">
                            <br>
                            <h3 class="mb-2">@ViewBag.Cinemas</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <!-- Order Statistics -->
        <div class="col-md-6 col-lg-6 col-xl-6 order-0 mb-4">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between pb-0">
                    <div class="card-title mb-0">
                        <h5 class="m-0 me-2">Doanh thu tháng @DateTime.Now.ToString("MM")</h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex flex-column align-items-center gap-1">
                            <br>
                            <h3 class="mb-2">@Model.Where(x => x.Booking.BookedAt.Month == DateTime.Now.Month).Count()</h3>
                            <span>Số vé bán ra</span>
                        </div>
                        <div class="d-flex flex-column align-items-center gap-1">
                            <br>

                            <h3 class="mb-2">@string.Format("{0:#,##0}", totalMonth) đ</h3>
                            <span>Tổng tiền vé</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ Order Statistics -->
        <div class="col-md-6 col-lg-6 col-xl-6 order-1 mb-4">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between pb-0">
                    <div class="card-title mb-0">
                        <h5 class="m-0 me-2">Doanh thu năm @DateTime.Now.ToString("yyyy")</h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex flex-column align-items-center gap-1">
                            <br>
                            <h3 class="mb-2">@Model.Where(x => x.Booking.BookedAt.Year == DateTime.Now.Year).Count()</h3>
                            <span>Số vé bán ra</span>
                        </div>
                        <div class="d-flex flex-column align-items-center gap-1">
                            <br>
                            <h3 class="mb-2">@string.Format("{0:#,##0}", totalYear) đ</h3>
                            <span>Tổng tiền vé</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <!-- Order Statistics -->
        <div class="col-md-12 col-lg-12 col-xl-12 mb-4">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between pb-0">
                    <div class="card-title mb-0">
                        <h5 class="m-0 me-2">Phim top doanh thu tháng @DateTime.Now.ToString("MM")</h5>
                    </div>
                    <a asp-action="Index" asp-controller="Statistic">Xem thêm</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive text-nowrap">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Hạng</th>
                                    <th>Tên phim</th>
                                    <th>Tổng vé bán ra</th>
                                    <th>Tổng tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.MonthTopMovie)
                                {
                                    monthNum++;
                                    <tr>
                                        <td>
                                            <span>Top @monthNum</span>
                                        </td>
                                        <td>
                                            @item.MovieName
                                        </td>
                                        <td>
                                            @item.TotalSell
                                        </td>
                                        <td>
                                            @string.Format("{0:#,##0}", item.TotalPrice)đ
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!--/ Order Statistics -->
        <div class="col-md-12 col-lg-12 col-xl-12 order-1 mb-4">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between pb-0">
                    <div class="card-title mb-0">
                        <h5 class="m-0 me-2">Phim top doanh thu năm @DateTime.Now.ToString("yyyy")</h5>
                    </div>
                    <a asp-action="Index" asp-controller="Statistic">Xem thêm</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive text-nowrap">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Hạng</th>
                                    <th>Tên phim</th>
                                    <th>Tổng vé bán ra</th>
                                    <th>Tổng tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.YearTopMovie)
                                {

                                    yearNum++;
                                    <tr>
                                        <td>
                                            <span>Top @yearNum</span>
                                        </td>
                                        <td>
                                            @item.MovieName
                                        </td>
                                        <td>
                                            @item.TotalSell
                                        </td>
                                        <td>
                                            @string.Format("{0:#,##0}", item.TotalPrice)đ
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

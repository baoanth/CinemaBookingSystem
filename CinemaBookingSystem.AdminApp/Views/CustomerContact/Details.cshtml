@model CinemaBookingSystem.ViewModels.CustomerContactViewModel;
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Thông tin phản hồi từ khách hàng @Model.CustomerName</h5>
                     <a asp-action="Index" asp-controller="CustomerContact"> <input type="submit" class="btn btn-primary w-100" value="Trở về danh sách" /></a>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="dob">Trạng thái</label>
                        <div class="col-sm-10">
                            @if (Model.Status)
                            {
                                <span class="badge bg-label-success me-1">Đã trả lời</span>
                            }
                            else
                            {
                                <span class="badge bg-label-warning me-1">Đợi trả lời</span>
                            }
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Ngày gửi</label>
                        <div class="col-sm-10">
                            @Model.SendedAt.ToString("HH:mm dd/MM/yyyy")
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Email khách hàng</label>
                        <div class="col-sm-10">
                            @Model.CustomerEmail
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Số điện thoại khách hàng</label>
                        <div class="col-sm-10">
                            @Model.CustomerPhone
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Nội dung phản hồi</label>
                        <div class="col-sm-10">
                            @Model.Content
                        </div>
                    </div>
                    <form method="post" asp-action="SendMail" asp-controller="CustomerContact">
                        <div class="row mb-3">
                            <h4>Phản hồi khách hàng:</h4>
                            <br />

                            <label class="col-sm-2 col-form-label" for="answer">Nội dung</label>
                            <div class="col-sm-10">
                                <textarea cols="3" class="form-control" name="message" required>

                                </textarea>
                            </div>
                            <input type="text" value="@Model.CustomerEmail" name="sendto" hidden />
                            <input type="number" value="@Model.Id" name="id" hidden />
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-success w-100" value="Thêm mới">Gửi phản hồi</button> &ensp;
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@model CinemaBookingSystem.ViewModels.CustomerContactViewModel;
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Thông tin phản hồi từ khách hàng @Model.CustomerName</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="dob">Trạng thái</label>
                        <div class="col-sm-10">
                            @if (Model.Status)
                            {
                                <span class="badge bg-label-success me-1">Đã trả lời</span>
                            }
                            else
                            {
                                <span class="badge bg-label-warning me-1">Đợi trả lời</span>
                            }
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="dob">Ngày gửi</label>
                        <div class="col-sm-10">
                            @Model.SendedAt.ToString("HH:mm dd/MM/yyyy")
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="CustomerContact-name">Email khách hàng</label>
                        <div class="col-sm-10">
                            @Model.CustomerEmail
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="fullname">Số điện thoại khách hàng</label>
                        <div class="col-sm-10">
                            @Model.CustomerPhone
                        </div>
                    </div>   
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="address">Nội dung phản hồi</label>
                        <div class="col-sm-10">
                            @Model.Content
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <a asp-action="Index" asp-controller="CustomerContact"> <input type="submit" class="btn btn-primary w-100" value="Trở về danh sách" /></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


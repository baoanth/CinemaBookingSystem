@model CinemaBookingSystem.ViewModels.ArticleViewModel;
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Blog Details Section Begin -->
<section class="blog-details spad">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-8">
                <div class="blog__details__title">
                    <h6>@Model.User.FullName <span>- @Model.CreatedDate.ToString("HH:mm dd/MM/yyyy")</span></h6>
                    <h2>@Model.ArticleTitle</h2>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="blog__details__pic">
                    <img src="@("/media/articles/" + Model.ArticleImage)" alt="">
                </div>
            </div>
            <div class="col-lg-8">
                <div class="blog__details__content">
                    <div class="blog__details__text">
                        <p>
                            @Model.ArticleContent
                        </p>
                    </div>
                    <div class="blog__details__item__text">
                        @{
                            if (!String.IsNullOrEmpty(Model.ArticleVideo))
                            {
                                <video controls autoplay muted>
                                    <source src="@("/media/articles/vids/" + Model.ArticleVideo)" />
                                </video>
                            }
                        }
                    </div>
                    <div class="blog__details__btns">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="blog__details__btns__item">
                                    <h5>
                                        <a asp-action="Index" asp-controller="Article"><span class="arrow_left"></span> Trở về</a>
                                    </h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Section End -->


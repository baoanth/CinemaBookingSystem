@model IEnumerable<CinemaBookingSystem.ViewModels.ContactViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Normal Breadcrumb Begin -->
<section class="normal-breadcrumb set-bg" data-setbg="@("../assets/img/banner.jpg")">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Thông tin liên hệ</h2>
                    <p>Thông tin liên hệ của CINE<span style="color:red !important">MAX</span>.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Normal Breadcrumb End -->
<!-- Login Section Begin -->
<section class="login spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login__form">
                    <h3 style="color:white !important">Liên hệ với chúng tôi</h3>
                    <form asp-action="SendContact" asp-controller="Contact" method="post">
                        <div class="input__item">
                            <input type="text" name="fullname" placeholder="Nhập họ tên của bạn..." required>
                            <span class="icon_mail"></span>
                        </div>
                        <div class="input__item">
                            <input type="text" name="email" placeholder="Nhập email của bạn..." required>
                            <span class="icon_mail"></span>
                        </div>
                        <div class="input__item">
                            <input type="text" name="phonenumber" placeholder="Nhập số điện thoại của bạn..." required>
                            <span class="icon_phone"></span>
                        </div>
                        <div>
                            <textarea class="form-control" cols="3" name="message" placeholder="Nhập nội dung cần liên hệ..." required></textarea>
                        </div>
                        <button type="submit" class="site-btn">Gửi đi</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login__register">
                    <h3>Thông tin liên hệ</h3>
                    <h4 style="color:white !important;">Trụ sở chính</h4>
                    <p style="color:white !important;">@Model.First().Department</p>
                    <hr style="border:white !important;" />
                    <h4 style="color:white !important;">Dịch vụ khách hàng</h4>
                    <p style="color:white !important;">
                        Hotline: @Model.First().Mobile <br />
                        Email hỗ trợ: @Model.First().Email<br />
                        Facebook hỗ trợ: @Model.First().FacebookURL
                    </p>
                    <hr style="border:white !important;" />
                    <h4 style="color:white !important;">Trạng thái hoạt động</h4>
                    @{
                        if (Model.First().IsWorking)
                        {
                            <p style="color:lightgreen !important;">Đang hoạt động</p>
                        }
                        else
                        {
                            <p style="color:orangered !important;">Đang tạm ngưng hỗ trợ</p>
                        }
                    }
                    <br />
                </div>
            </div>
        </div>
        <div class="login__social">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-6">
                    <div class="login__social__links">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Login Section End -->

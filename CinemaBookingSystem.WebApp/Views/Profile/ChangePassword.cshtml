@model CinemaBookingSystem.ViewModels.ChangePasswordViewModel;
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string username = ViewBag.Username;
}


<!-- Normal Breadcrumb Begin -->
<section class="normal-breadcrumb set-bg" data-setbg="@("../assets/img/banner.jpg")">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Cập nhật thông tin người dùng</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Normal Breadcrumb End -->
<!-- Signup Section Begin -->
<section class="signup spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="login__form">
                    <h3 style="color:white !important">Đổi mật khẩu</h3>
                    <form asp-action="ChangePassword" method="post">
                        <div class="input__item" hidden>
                            <input type="text" asp-for="Username" value="@username" placeholder="Nhập mật khẩu cũ..." required>
                            <span class="icon_lock"></span>
                        </div>
                        <div class="input__item">
                            <input type="password" asp-for="OldPassword" placeholder="Nhập mật khẩu cũ..." required>
                            <span class="icon_lock"></span>
                        </div>
                        <div class="input__item">
                            <input type="password" asp-for="NewPassword" placeholder="Nhập mật khẩu cũ..." required>
                            <span class="icon_lock"></span>
                        </div>
                        <div class="input__item">
                            <input type="password" asp-for="ConfirmPassword" placeholder="Nhập mật khẩu cũ..." required>
                            <span class="icon_lock"></span>
                        </div>
                        <button type="submit" class="site-btn">Cập nhật</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Signup Section End -->

